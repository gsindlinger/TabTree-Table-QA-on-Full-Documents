    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Pipeline",
            "type": "debugpy",
            "request": "launch",
            "module": "src",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--run.pipeline=true",
                "--run.indexing=false"
            ]
        },
        {
            "name": "Run Indexing",
            "type": "debugpy",
            "request": "launch",
            "module": "src",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--run.indexing=true",
                "--run.pipeline=false",
            ]
        },
        {
            "name": "Run Analysis",
            "type": "debugpy",
            "request": "launch",
            "module": "src",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--run.indexing=false",
                "--run.pipeline=false",
                "--run.analysis=true"
            ]
        },
        {
            "name": "Run Evaluation",
            "type": "debugpy",
            "request": "launch",
            "module": "src",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--run.indexing=false",
                "--run.pipeline=false",
                "--run.evaluation=true"
            ]
        },
        {
            "name": "Run Eval Multi",
            "type": "debugpy",
            "request": "launch",
            "module": "src",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "--run.pipeline=false",
                "--run.evaluation-multi=true"
            ],
            "justMyCode": false
        }
    ]
}
